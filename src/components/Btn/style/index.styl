@import '../../style/';

_default = #d9d9d9;
_default_deep = #666;
_themes = 'red', 'blue', 'yellow', 'green';

.hiui-btn {
  display: inline-block;
  margin-bottom: 0;
  font-weight: 500;
  text-align: center;
  white-space: nowrap;
  border-radius: 4px;
  user-select: none;
  position: relative;
  color: rgba(0 ,0 , 0, .65);
  outline: none;
  box-shadow: none;
  
  &:not(.disabled):active {
    box-shadow: inset 0 2px 3px rgba(0, 0, 0, .12);
  }
  
  //  三种类型[基本, 虚线, 实心]
  &.hiui-btn-primary, &.hiui-btn-primary.hiui-btn-default {
    color: _default_deep;
    border: 1px solid _default;
    background-color: #fff;
  }

  &.hiui-btn-dashed, &.hiui-btn-dashed.hiui-btn-default {
    color: _default_deep;
    border: 1px dashed _default_deep;
    background-color: #fff;
  }
  
  &.hiui-btn-solid, &.hiui-btn-solid.hiui-btn-default {
    color: #fff;
    border: 1px solid _default;
    background-color: _default_deep;
  }
  
  //  颜色主题
  for _color in _themes {
    _btn_color = _ + _color;
    &.hiui-btn-primary.hiui-btn-{_color} {
      color: _btn_color;
      border: 1px solid _btn_color;
      background-color: #fff;
    }

    &.hiui-btn-dashed.hiui-btn-{_color} {
      color: _btn_color;
      border: 1px dashed _btn_color;
      background-color: #fff;
    }
    
    &.hiui-btn-solid.hiui-btn-{_color} {
      color: #fff;
      border: 1px solid _btn_color;
      background-color: _btn_color;
    }
  }
  
  &.disabled {
    opacity: .3;
  }
}


/*
 * options
 */
_btn_font_sm = 14px;
_btn_font_md = 16px;
_btn_font_lg = 18px;

_btn_gap_sm = 12px;
_btn_gap_md = 14px;
_btn_gap_lg = 16px;

_btn_icon_sm = 16px;
_btn_icon_md = 18px;
_btn_icon_lg = 20px;

for size in _size {
  .hiui-btn-{size} {
    padding: 0 _btn_gap_ + size;
    font-size: _btn_font_ + size;
    height: _size_ + size;
    
    .hiui-icon {
      width: _btn_icon_ + size;
      height: _btn_icon_ + size;
    }
  }
}
